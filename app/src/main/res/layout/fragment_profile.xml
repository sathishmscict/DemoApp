                        app:siBorderWidth="3dp" />-->

                        <!--<ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"

                        android:layout_marginBottom="35dp"

                        android:layout_marginLeft="60dp"
                        android:src="@drawable/icon_edit_camera" />-->

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"

                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="50dp"

                            android:background="@color/colorPrimaryDark"
                            android:src="@drawable/icon_edit_camera" />


                    </FrameLayout>


                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"

                        android:text="SathishG"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtmobile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+91 "
                        android:textAppearance="?android:attr/textAppearanceMedium"

                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".45"

                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"

                        android:background="@color/colorSecondaryText" />





                    <LinearLayout
                        android:id="@+id/llname"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.87"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/icon_username" />

                        <android.support.design.widget.TextInputLayout

                            android:id="@+id/txtname_editWrapper"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.13"
                            android:gravity="center|left">

                            <EditText
                                android:id="@+id/txtname_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.13"
                                android:background="@null"

                                android:gravity="center|left"
                                android:hint="Full Name"
                                android:inputType="textCapWords"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="@color/black">

                                <requestFocus />
                            </EditText>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSecondaryText" />


                    <LinearLayout
                        android:id="@+id/llemail"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.87"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/icon_email" />

                        <android.support.design.widget.TextInputLayout

                            android:id="@+id/txtemail_editWrapper"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.13"
                            android:gravity="center|left">

                            <EditText
                                android:id="@+id/txtemail_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.13"
                                android:background="@null"
                                android:gravity="center|left"
                                android:hint="Enter Email"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSecondaryText" />


                    <LinearLayout
                        android:id="@+id/llDOB"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.87"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/icon_dob" />

                        <android.support.design.widget.TextInputLayout

                            android:id="@+id/edtDobWrapper"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.13"
                            android:gravity="center|left">

                            <EditText
                                android:id="@+id/edtdob"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.13"
                                android:background="@null"

                                android:gravity="center|left"
                                android:hint="Date of Birth(DD-MM-YYYY)"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSecondaryText" />




                    <LinearLayout
                        android:id="@+id/llgender"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">



                        <RadioGroup
                            android:id="@+id/rdGrpGender"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"



                            android:orientation="horizontal"


                            android:gravity="center"

                            android:paddingRight="@dimen/activity_horizontal_margin">


                            <RadioButton
                                android:id="@+id/rdMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"

                                android:layout_weight="1"
                                android:checked="true"
                                android:drawableLeft="@drawable/icon_male"

                                android:text="Male" />


                            <RadioButton
                                android:id="@+id/rdFemale"
                                android:drawableLeft="@drawable/icon_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Female" />

                        </RadioGroup>
                    </LinearLayout>




                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorSecondaryText" />










                </LinearLayout>

