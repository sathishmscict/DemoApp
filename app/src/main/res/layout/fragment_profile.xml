                        <!--<com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/imgProfilePic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
