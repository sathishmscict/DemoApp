<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    android:elevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"


        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.myoffersapp.ui.AppTextView

                android:id="@+id/txtOfferId"
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="ORDER ID : 9723613143" />

            <com.myoffersapp.ui.AppTextView

                android:id="@+id/txtOfferUsedData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"


                android:paddingRight="8dp"

                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"


            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <ImageView
                android:id="@+id/ivVendorLogo"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_margin="2dp"

                android:src="@drawable/bg3"

                android:clickable="false"

                android:scaleType="centerCrop"





                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.myoffersapp.ui.AppTextView
                    android:id="@+id/tvOfferTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"


                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary"

                    android:textStyle="bold" />


                <com.myoffersapp.ui.AppTextView
                    android:id="@+id/tvVendorName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="VendorName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <com.myoffersapp.ui.AppTextView
                    android:id="@+id/tvVendorAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center_vertical"

                    android:backgroundTint="@color/colorPrimary"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/icon_small_location"
                    android:drawableTint="@color/colorPrimary"
                    android:text="Address"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>